<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox alignment="BASELINE_LEFT" spacing="20.0"
	xmlns="http://javafx.com/javafx/8.0.171"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="beer.dacelo.dev.aoq2023.AoC2022Controller">
	<children>
		<VBox spacing="20.0">
			<children>
				<HBox spacing="20.0">
					<children>
						<Label text="Day 1: Calorie Counting" />
						<Button fx:id="test1" onAction="#genericQuestion"
							userData="1" text="test" />
						<Button fx:id="part1" onAction="#genericQuestion"
							userData="1" text="part1" />
						<Button fx:id="test2" onAction="#genericQuestion"
							userData="1" text="test2" />
						<Button fx:id="part2" onAction="#genericQuestion"
							userData="1" text="part2" />
					</children>
				</HBox>
				<HBox spacing="20.0">
					<children>
						<Label text="Day 2: Rock Paper Scissors" />
						<Button fx:id="test1" onAction="#genericQuestion"
							userData="2" text="test" />
						<Button fx:id="part1" onAction="#genericQuestion"
							userData="2" text="part1" />
						<Button fx:id="test2" onAction="#genericQuestion"
							userData="2" text="test2" />
						<Button fx:id="part2" onAction="#genericQuestion"
							userData="2" text="part2" />
					</children>
				</HBox>
				<HBox spacing="20.0">
					<children>
						<Label text="Day 3: Rucksack Reorganization" />
						<Button fx:id="test1" onAction="#genericQuestion"
							userData="3" text="test" />
						<Button fx:id="part1" onAction="#genericQuestion"
							userData="3" text="part1" />
						<Button fx:id="test2" onAction="#genericQuestion"
							userData="3" text="test2" />
						<Button fx:id="part2" onAction="#genericQuestion"
							userData="3" text="part2" />
					</children>
				</HBox>
				<HBox spacing="20.0">
					<children>
						<Label text="Day 4: Camp Cleanup" />
						<Button fx:id="test1" onAction="#genericQuestion"
							userData="4" text="test" />
						<Button fx:id="part1" onAction="#genericQuestion"
							userData="4" text="part1" />
						<Button fx:id="test2" onAction="#genericQuestion"
							userData="4" text="test2" />
						<Button fx:id="part2" onAction="#genericQuestion"
							userData="4" text="part2" />
					</children>
				</HBox>

				<HBox spacing="20.0">
					<children>
						<Label text="Return to Main" />
						<Button fx:id="backButton" text="Back..."
							onAction="#switchToPrimary" />
					</children>
				</HBox>
			</children>
		</VBox>
	</children>
	<padding>
		<Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
	</padding>
</VBox>
